{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noEmitOnError": true,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "outDir": "build",
        "pretty": true,
        "noImplicitAny": false,
        "allowJs": true        
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
